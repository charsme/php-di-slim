{
    "name": "chars/php-di-slim",
    "description": "slim glue to php-di",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Charis",
            "email": "me@chars.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Resilient\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Resilient\\Test\\": "test"
        }
    },
    "require": {
        "slim/slim": "^3.8",
        "php-di/php-di": "^6.0",
        "ocramius/proxy-manager": "^2.1",
        "doctrine/annotations": "^1.4",
        "doctrine/cache": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "symfony/var-dumper": "^3.3"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test:verbose": "./vendor/bin/phpunit -v --debug"
    }
}
